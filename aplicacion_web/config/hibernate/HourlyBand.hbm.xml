<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class lazy="false" name="ar.com.dailyMarket.model.HourlyBand" table="hourlyband">
        <id column="id" name="id" type="java.lang.Long">
            <generator class="identity"/>
        </id>
		
		<property column="name" name="name"  type="java.lang.String"/>
		<property column="description" name="description"  type="java.lang.String"/>
		<property column="initband" name="initBand"  type="java.lang.Integer"/>
		<property column="endband" name="endBand"  type="java.lang.Integer"/>			    	    			 
    </class>   
</hibernate-mapping>

